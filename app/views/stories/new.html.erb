<h1>New Story</h1>

<%= form_with scope: :story, url: stories_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :blurb %><br>
    <%= form.text_area :blurb %>
  </p>

  <p>
    <%= form.label :link %><br>
    <%= form.text_area :link %>
  </p>

  <p>
    <%= form.label :date %><br>
    <%= form.text_area :date %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', stories_path %>