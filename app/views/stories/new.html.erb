<h1>New Story</h1>

<%= form_with scope: :story, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.label :link %><br>
    <%= form.text_area :link %>
  </p>

  <p>
    <%= form.label :date %><br>
    <%= form.text_area :date %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>